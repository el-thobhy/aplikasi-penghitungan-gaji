@{
    Layout = null;
}
<form asp-action="Create" method="post" id="formCreateLembur">
    <input type="hidden" name="CreateBy" value="admin" />
    <div class="card">
        <div class="h4 card-header">@ViewBag.Title</div>
        <div class="card-body">
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Dokumen Lembur</label>
                <div class="col-sm-8">
                    <input type="file" class="form-control" id="dokumenLembur" name="dokumenLembur">
                    <span id="validate_dokumenLembur" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Tanggal</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" id="tanggal" name="tanggal">
                    <span id="validate_tanggal" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Id Pegawai</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" id="idPegawai" name="idPegawai">
                    <span id="validate_idPegawai" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Jumlah Lembur</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" id="jumlahLembur" name="jumlahLembur">
                    <span id="validate_jumlahLembur" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>

    </div>
</form>

<script>

    $("#formCreateLembur").submit(function (e) {
        // disable form submit
        e.preventDefault()

        $.ajax({
            url: "/Lembur/Create",
            type: "post",
            data: $("#formCreateLembur").serialize(),
            beforeSend: function () {
                // Loader

            },
            success: function (response) {
                location.reload();
            },
            error: function (errResponse) {
                alert(@ViewBag.Message);
            }
        })

    })
</script>


