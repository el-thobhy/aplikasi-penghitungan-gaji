
<div class="card">
    <div class="card-body">
<form asp-action="Index" method="post" id="formAuth">
    <input type="hidden" name="CreateBy" value="admin" />
    <div class="card">
        <div class="h4 card-header">@ViewBag.Title</div>
        <div class="card-body">
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Username</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="userName" name="userName">
                    <span id="userName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-4 row">
                <label class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" autocomplete="on" id="password" name="password">
                    <span id="password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-success">Login</button>
        </div>

    </div>
</form>
</div>
</div>
<script>

    $("#formAuth").submit(function (e) {
        // disable form submit
        e.preventDefault()

        $.ajax({
            url: "/Auth/Login",
            type: "post",
            data: $("#formAuth").serialize(),
            beforeSend: function () {
                // Loader

            },
            success: function (response) {
                debugger
                location.reload();
            },
            error: function (errResponse) {
                debugger
                alert(errResponse.responseText);
            }
        })

    })
</script>


